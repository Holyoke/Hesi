<!DOCTYPE html>
<html>
<head>
  <title>Hesigram</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
	<%= cloudinary_js_config %>
</head>
<body>

<nav>
	<div class="session">
		<ul class="nav nav-tabs">
			<% if signed_in? %>
				 <%= cl_image_tag(current_user.avatar.path,
				  {:width => 50, :height => 50, :crop => :fill, :radius => 20, :effect => "shadow"}) %>
					<div class=".nav-pills">
						<%= current_user.username %>
					</div>
				<%= button_to "Sign Out...", session_url, method: :delete %>
				<!--put upload button here -->
				
				<%= form_tag("/climages" , :method => :post) do  %>
				  <%= cl_image_upload_tag(:image_id, :crop => :limit, :width => 1000, :height => 1000, 
				                          :html => {:class => "image_upload"}) %>
				<% end %>
				
				
				
		<% else %>
			<%= link_to "Sign In", new_session_url %>
			<%= link_to "Sign Up!", new_user_url %>
		<% end %>
		</ul>
	</div>
</nav>


<!--Figaro constants -->
<div class="container">
	<%= yield %>
</div>
</body>
</html>
